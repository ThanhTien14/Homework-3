<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="#FFFF99">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:src="@drawable/whats_your_number" />

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numeber Guessing Game"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select a number of digits. The number of digits that I keep in my mind and the number of digits you choose will be the same. Also, never forget that you have 10 rights."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/difficultyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/twoDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Digit Number" />

        <RadioButton
            android:id="@+id/threeDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Three Digit Number" />

        <RadioButton
            android:id="@+id/fourDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four Digit Number" />
    </RadioGroup>

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:backgroundTint="#FF99CC"
        android:layout_marginTop="32dp"/>

</LinearLayout>